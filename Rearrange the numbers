/* I/P:1,2,3,4,5,6,7
   O/P: 7,1,6,2,5,3,4
   */


var rearrange = function (arr,n){
  let min=0;
  let max=n-1;
  let temp=[]
  for(let i=0;i<n;i++){
    if(i%2==0){
      temp.push(arr[max]);
      max--;
    }
    else{
      temp.push(arr[min]);
      min++;
    }
  }
  return temp;
  
}
console.log(rearrange([1,2,3,4,5,6,7],7));
